<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <main>
      <div class="container">
        <section>
          <div class="columns is-centered">
            <div class="column is-6">
              <h1>Registro</h1>
              <form
                action="/groups"
                method="POST"
                enctype="multipart/form-data"
              >
                <div class="field">
                  <label for="name">Nombre</label>
                  <div class="control">
                    <input type="text" name="name" />
                  </div>
                  <p class="feedback"></p>
                </div>

                <div class="field">
                  <label for="description">Descripci√≥n</label>
                  <div class="control">
                    <textarea name="description"></textarea>
                  </div>
                  <p class="feedback"></p>
                </div>
                <!-- creamos el campo para subir archivo -->
                <div class="field">
                  <label for="group-image">Imagen del repositorio</label>
                  <div class="control">
                    <input type="file" name="group-image" id="group-image" />
                  </div>
                  <p class="feedback"></p>
                </div>
                <!-- fin campo subir archivo -->
                <div class="field">
                  <label for="repository">Repositorio</label>
                  <div class="control">
                    <input type="text" name="repository" />
                  </div>
                  <p class="feedback"></p>
                </div>

                <div class="field">
                  <div class="control">
                    <button type="submit">Crear grupo</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </section>
      </div>
    </main>
  </body>
</html>
